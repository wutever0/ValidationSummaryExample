@model LoginRegisterViewModel
@{
    ViewData["Title"] = "Log in / Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    LoginFormModel loginFormModel = new LoginFormModel();
    RegisterFormModel registerFormModel = new RegisterFormModel();
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@loginFormModel.Email"></label>
                    <input asp-for="@loginFormModel.Email" class="form-control" />
                    <span asp-validation-for="loginFormModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@loginFormModel.Password"></label>
                    <input asp-for="@loginFormModel.Password" class="form-control" />
                    <span asp-validation-for="@loginFormModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="@loginFormModel.RememberMe">
                            <input asp-for="@loginFormModel.RememberMe" />
                            @Html.DisplayName("@loginFormModel.RememberMe")
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-4">
        <form method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@registerFormModel.Email"></label>
                <input asp-for="@registerFormModel.Email" class="form-control" />
                <span asp-validation-for="@registerFormModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@registerFormModel.Password"></label>
                <input asp-for="@registerFormModel.Password" class="form-control" />
                <span asp-validation-for="@registerFormModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@registerFormModel.ConfirmPassword"></label>
                <input asp-for="@registerFormModel.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@registerFormModel.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}